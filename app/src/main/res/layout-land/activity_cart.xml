<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/cartActivity_textView_priceSum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:layout_margin="10dp"
            android:background="@color/orange" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartActivity_recyclerView_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            android:background="@color/orange"
            tools:listitem="@layout/cart_item"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8">

        <Button
            android:id="@+id/cartActivity_button_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:text="BUY"
            android:backgroundTint="@color/coffee"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/cartActivity_button_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:text="BACK"
            android:backgroundTint="@color/coffee"
            android:layout_margin="10dp"/>

    </LinearLayout>




</LinearLayout>