<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.80"
        android:background="@color/orange"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/productsActivity_button_coffee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_local_cafe_24" />

        <ImageButton
            android:id="@+id/productsActivity_button_snacks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_local_pizza_24" />

        <ImageButton
            android:id="@+id/productsActivity_button_milkshakes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_blender_24" />

        <ImageButton
            android:id="@+id/productsActivity_button_alcohol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_local_bar_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/yellow" />

        <ImageButton
            android:id="@+id/productsActivity_button_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_shopping_cart_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/yellow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:background="@color/light_yellow">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsActivity_recyclerView_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/products_item"/>
    </LinearLayout>


</LinearLayout>